<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticalFragment"
    android:background="@color/applicationBackground">
    <LinearLayout
        android:id="@+id/dateControllerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:padding="2dp">
        <Button
            android:id="@+id/yesterdayButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/corner_grid_second_color"
            android:text="@string/yesterday"
            android:textColor="@color/white"
            android:layout_margin="2dp"/>
        <EditText
            android:id="@+id/datePickerEditText"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"/>
        <Button
            android:id="@+id/todayButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/corner_grid_second_color"
            android:text="@string/today"
            android:textColor="@color/white"
            android:layout_margin="2dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="10,000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="2dp"
        android:textAlignment="center"
        android:layout_below="@+id/dateControllerLinearLayout" />
    <GridView
        android:id="@+id/invoiceGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1"
        android:layout_below="@+id/amountTextView"/>

</RelativeLayout>